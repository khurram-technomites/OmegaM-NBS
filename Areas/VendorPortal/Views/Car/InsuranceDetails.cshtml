@model NowBuySell.Data.CarInsurance
@{
	ViewBag.Title = "Detail";
	Layout = null;
}
<div class="modal-header">
	<h5 class="modal-title">Insurance Details</h5>
	<button type="button" class="close" data-dismiss="modal" aria-label="Close">
		<i aria-hidden="true" class="ki ki-close"></i>
	</button>
</div>
<div class="modal-body">
	@using (Html.BeginForm("EditInsurance", "Car", new { area = "VendorPortal" }, FormMethod.Post, new { id = "Userform", @class = "form" }))
	{
		@Html.AntiForgeryToken()
		<div class="alert alert-danger text-center" id="divMessage" style="display:none"></div>
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="row">
			<div class="col-md-6 col-sm-12">
				<div class="form-group">
					<label class="control-label">Name</label>
					<div class="input-group mb-2">
						@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", id = "Name", placeholder = "Enter name here ...", Readonly="readonly" } })
						@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
						<div class="input-group-append">
							<span class="input-group-text"><i class="fa fa-tag"></i></span>
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-6 col-sm-12">
				<div class="form-group">
					<label class="control-label">NameAr</label>
					<div class="input-group mb-2">
						@Html.EditorFor(model => model.NameAr, new { htmlAttributes = new { @class = "form-control", id = "NameAr", placeholder = "Enter NameAr here ...", Readonly = "readonly"  } })
						@Html.ValidationMessageFor(model => model.NameAr, "", new { @class = "text-danger" })
						<div class="input-group-append">
							<span class="input-group-text"><i class="fa fa-tag"></i></span>
						</div>
					</div>
				</div>
			</div>
		</div>
