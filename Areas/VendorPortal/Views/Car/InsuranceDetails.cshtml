			<div class="col-md-12 col-sm-12">
				<div class="form-group">
					<label class="control-label">Detail (Ar)</label>
					<div class="input-group mb-3">
						@Html.TextAreaFor(model => model.DetailsAr, 5, 10, new { @class = "form-control",dir ="rtl" ,Readonly = "readonly", id = "DetailAr", placeholder = "Enter details here ..." })
