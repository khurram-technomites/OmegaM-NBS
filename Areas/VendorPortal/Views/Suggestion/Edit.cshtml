@model NowBuySell.Data.VendorSuggestion
@{
    ViewBag.Title = "Edit";
    Layout = null;
}

<div class="modal-header">
    <h5 class="modal-title">Update</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <i aria-hidden="true" class="ki ki-close"></i>
    </button>
</div>
<div class="modal-body">

    @using (Html.BeginForm("Edit", "Suggestion", new { area = "VendorPortal" }, FormMethod.Post, new { id = "frm-edit", @class = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="alert alert-danger text-center" id="divMessage" style="display:none"></div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.Suggestion, "Suggestion", htmlAttributes: new { @class = "control-label" })
                    <div class="input-group mb-2">
                        @Html.TextAreaFor(model => model.Suggestion,  new {  @placeholder = "Enter Suggestion here ...", 
                       @class = "form-control", required = "required" , rows="4" } 
                            )
@*                        <textarea class="form-control" id="Suggestion" name="Suggestion" rows="4" placeholder="Enter Suggestions Here" value="@Model.Suggestion"></textarea>
*@                        @Html.ValidationMessageFor(model => model.Suggestion, "", new { @class = "text-danger" })
                        <div class="input-group-append"><span class="input-group-text"><i class="fa fa-tags"></i></span></div>
                    </div>
                </div>
            </div>
            @*<div class="col-md-6 col-sm-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.NameAr, "Tag Name (Ar)", htmlAttributes: new { @class = "control-label" })
                        <div class="input-group mb-2">
                            @Html.EditorFor(model => model.NameAr, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter tag name (ar) here ...", required = "required", dir = "rtl" } })
                            @Html.ValidationMessageFor(model => model.NameAr, "", new { @class = "text-danger" })
                            <div class="input-group-append"><span class="input-group-text"><i class="fa fa-tags"></i></span></div>
                        </div>
                    </div>
                </div>*@
        </div>
    }
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <button type="submit" class="btn btn-info" form="frm-edit">Save Changes</button>
</div>
