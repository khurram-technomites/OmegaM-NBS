


@{
    ViewBag.Title = "Bulk Upload";
    Layout = null;
}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
@using (Html.BeginForm("CreateInspection", "PropertyInspection", FormMethod.Post, new { id = "UploadCar", @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <div class="container-fluid">
            <div class="row" style="justify-content: center;">
                <div class="col-md-16 col-xs-16 text-center">
                    <h4><i class="flaticon2-architecture-and-city" area-hidden="true"></i> Property Inspection</h4>
                    <small> Upload Property Inspection Document Here</small>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-body">
        <div class="notes notes-danger text-center" id="divMessage" style="display:none"></div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-12">
                <label> Name</label>
                <div class="input-group">
                    <input type="text" id="NameDocs" name="NameDocs" class="form-control" required="required" />
                    <div class="input-group-append"><span class="input-group-text"><i class="fa fa-upload"></i></span></div>
                </div>
            </div>
            <input type="number" name="PropertyID" id="PropertyID" hidden value="@ViewBag.PropertyID" />
            <div class="col-12 mt-10">
                <div class="input-group">
                    <input type="file" id="fileUpload" name="FileUpload" class="form-control" required="required" />
                    <div class="input-group-append"><span class="input-group-text"><i class="fa fa-upload"></i></span></div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer text-muted">
        <div class="row">
            <div class="col-md-16  col-xs-16">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    Close
                </button>
                <button type="button" id="btnSubmitInspection" class="btn btn-info">
                    Upload
                </button>
            </div>
        </div>
    </div>
}

