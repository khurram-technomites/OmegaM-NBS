                                            </label>
                                        </td>
                                        @*<td nowrap="nowrap"> <input type="checkbox" class="checkbox"id="@item.ID" </td>-----
                                        <td data-order="@item.ID">@(item.CreatedOn.HasValue ? item.CreatedOn.Value.ToString("dd MMM yyyy, h:mm tt") : "-")	</td>
                                        <td>@item.Thumbnail,@item.Name,@item.Vendor.Name,@item.Address</td>
                                        <td>@item.Name|@item.SKU | @item.Thumbnail</td>
                                        <td>@item.ApprovalStatus</td>
                                        <td nowrap="nowrap">@item.ApprovalStatus,@item.ID</td>
                                    </tr>
                                }
                            </tbody>*@
                </table>
                <!--end: Datatable-->
            </div>
        </div>
        <!--end::Card-->
    </div>
</div>
<!--end::Row-->
