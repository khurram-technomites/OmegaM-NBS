
@{
    ViewBag.Title = "Customer360";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    .nav-tabs .nav-link.active, .nav-tabs .nav-item.show .nav-link {
        color: #5E6278;
        background-color: #ffffff;
        border-color: #6993FF #6993FF #6993FF;
    }

   /* .card-custom {
        box-shadow: rgb(0 0 0 / 35%) 0px 5px 15px !important;
    }*/
    h6 {
        font-weight: 300;
    }
</style>
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Subheader-->

    <div class="subheader py-2 py-lg-12 subheader-transparent" id="kt_subheader">

        <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <!--begin::Info-->

            <div class="d-flex align-items-center flex-wrap mr-1">
                <!--begin::Heading-->

                <div class="d-flex flex-column">

                    <!--begin::Breadcrumb-->

                    <div class="d-flex align-items-center font-weight-bold my-2">
                        <!--begin::Item-->
                        <a href="/Admin/Dashboard/Index" class="opacity-75 hover-opacity-100">
                            <i class="flaticon2-shelter text-white icon-1x"></i>
                        </a>
                        <!--end::Item-->
                        <!--begin::Item-->
                        <a href="/Admin/Dashboard/Index" class="text-white text-hover-white opacity-75 hover-opacity-100">&nbsp;&nbsp;Dashboard</a>
                        <!--end::Item-->
                        <!--begin::Item-->
                        <span class="label label-dot label-sm bg-white opacity-75 mx-3"></span>
                        <a href="/Admin/Customer/Index" class="text-white text-hover-white opacity-75 hover-opacity-100">Customers</a>
                        <!--end::Item-->
                    </div>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Heading-->
            </div>
            <!--end::Info-->
        </div>
    </div>
    <!--end::Subheader-->
    <!--begin::Entry-->

    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->

        <div class="container">
            <div class="row">

                <div class="col-xl-12">
                    <!--begin::Card-->

                    <div class="card card-custom gutter-b">

                        <div class="card-header flex-wrap border-0 pt-6 pb-0">

                            <div class="card-title">
                                <h3 class="card-label">
                                    Customer
                                </h3>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 col-sm-6">
                                    <div class="form-group">
                                        <label style="font-weight:bold" class="control-label">Name</label>
                                        <div class="input-group mb-2">
                                            <label readonly="readonly">@Model.Name</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6">
                                    <div class="form-group">
                                        <label style="font-weight:bold" class="control-label">Country</label>
                                        <div class="input-group mb-2">
                                            <label readonly="readonly">@(Model.Country != null ? Model.Country.Name : "-")</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 col-sm-6">
                                    <div class="form-group">
                                        <label style="font-weight:bold" class="control-label">Contact</label>
                                        <div class="input-group mb-2">
                                            <label readonly="readonly">@Model.Contact</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6">
                                    <div class="form-group">
                                        <label style="font-weight:bold" class="control-label">City</label>
                                        <div class="input-group mb-2">
                                            <label readonly="readonly">@(Model.City != null ? Model.City.Name : "-")</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 col-sm-6">
                                    <div class="form-group">
                                        <label style="font-weight:bold" class="control-label">Email</label>
                                        <div class="input-group mb-2">
                                            <label readonly="readonly">@Model.Email</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6">
                                    <div class="form-group">
                                        <label style="font-weight:bold" class="control-label">Address</label>
                                        <div class="input-group mb-2">
                                            <label readonly="readonly">@(Model.Address != null ? Model.Address : "-")</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                          

                        </div>
                        <div class="card-body">
                            <ul class="nav nav-tabs nav-tabs-bottom nav-justified">
                                @*<li class="nav-item" role="presentation">
                                        <a class="nav-link active" href="#booking-pending-tab1" id="ex-with-icons-tab-1" data-mdb-toggle="tab" href="#ex-with-icons-tabs-1" role="tab"
                                           aria-controls="ex-with-icons-tabs-1" aria-selected="true"><i class="fas fa-car fa-fw me-2"></i>Motor</a>
                                    </li>
                                    <li class="nav-item" role="presentation">
                                        <a class="nav-link"  id="ex-with-icons-tab-2"  href="#booking-completed-tab2" data-mdb-toggle="tab" href="#ex-with-icons-tabs-2" role="tab"
                                           aria-controls="ex-with-icons-tabs-2" aria-selected="false"><i class="fas fa-building fa-fw me-2"></i>Property</a>
                                    </li>*@
                                <li class="nav-item"><a class="nav-link active" href="#Motortab" data-toggle="tab"><i class="fas fa-car fa-fw me-2"></i>Motor</a></li>
                                <li class="nav-item"><a class="nav-link" id="comp-tab" href="#Properytab" data-toggle="tab"><i class="fas fa-building fa-fw me-2"></i>Property</a></li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane show active" id="Motortab">
                                    <div style="padding:1%">
                                        <div class="row">
                                            <div class="col-xl-12">
                                                @{ Html.RenderAction("GetInTouchListMotors", "Customer", new { area = "Admin" }); }
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xl-12">
                                                @{ Html.RenderAction("MotorMeetingList", "Customer", new { area = "Admin" }); }
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xl-12">
                                                @{ Html.RenderAction("MotorDriveList", "Customer", new { area = "Admin" }); }
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xl-12">
                                                @{ Html.RenderAction("MotorRequest", "Customer", new { area = "Admin" }); }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane show" id="Properytab">
                                    <div style="padding:1%">
                                        <div class="row">
                                            <div class="col-xl-12">
                                                @{ Html.RenderAction("GetInTouchListProperty", "Customer", new { area = "Admin" }); }
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xl-12">
                                                @{ Html.RenderAction("PropertyMeetingList", "Customer", new { area = "Admin" }); }
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xl-12">
                                                @{ Html.RenderAction("PropertyTourList", "Customer", new { area = "Admin" }); }
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xl-12">
                                                @{ Html.RenderAction("PropertyRequest", "Customer", new { area = "Admin" }); }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Tabs content -->
                        <!--</div>-->
                    </div>
                    <!--end::Card-->
                </div>
            </div>
        </div>
        <!--end::Container-->
    </div>
    <!--end::Entry-->
</div>

<div id="myModal" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div id='myModalContent'>
                <div class="row justify-content-center">
                    <div class="col-16">
                        <div class="kt-spinner kt-spinner--lg kt-spinner--dark kt-spinner-modal"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section IndexScript {

    <!--begin::Page Vendors(used by this page)-->
    @* <script src="~/assets/Admin/plugins/custom/datatables/datatables.bundle.js"></script>*@
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap4.min.js"></script>
    <!--end::Page Vendors-->
    <!--begin::Page Scripts(used by this page)-->
    <!--end::Page Scripts-->

    <script src="~/Assets/Admin/js/general/ModalPopup.js"></script>
    <!--end::Page Scripts-->
}