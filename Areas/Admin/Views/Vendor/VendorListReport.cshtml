@model IEnumerable<NowBuySell.Data.Vendor>

@{
    ViewBag.Title = "VendorListReport";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<link href="~/assets/Admin/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />

<!--end::Page Vendors Styles-->
<!--begin::Content-->
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Subheader-->
    <div class="subheader py-2 py-lg-12 subheader-transparent" id="kt_subheader">
        <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <!--begin::Info-->
            <div class="d-flex align-items-center flex-wrap mr-1">
                <!--begin::Heading-->
                <div class="d-flex flex-column">

                    <!--begin::Breadcrumb-->
                    <div class="d-flex align-items-center font-weight-bold my-2">
                        <!--begin::Item-->
                        <a href="/Admin/Dashboard/Index" class="opacity-75 hover-opacity-100">
                            <i class="flaticon2-shelter text-white icon-1x"></i>
                        </a>
                        <!--end::Item-->
                        <!--begin::Item-->
                        <a href="/Admin/Dashboard/Index" class="text-white text-hover-white opacity-75 hover-opacity-100">&nbsp;&nbsp;Dashboard</a>
                        <!--end::Item-->
                        <!--begin::Item-->
                        <span class="label label-dot label-sm bg-white opacity-75 mx-3"></span>
                        <a href="javascript:;" class="text-white text-hover-white opacity-75 hover-opacity-100">Vendors</a>
                        <!--end::Item-->
                    </div>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Heading-->
            </div>
            <!--end::Info-->
        </div>
    </div>
    <!--end::Subheader-->
    <!--begin::Entry-->
    <div class="card">
        <div class="card-body">
            <div class="card-border">
                <div class="d-flex flex-column-fluid">
                    <!--begin::Container-->
                    <div class="container">
                        <!--begin::Dashboard-->
                        <table class="table table-separate table-head-custom table-checkable" id="kt_datatable1">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Vendor Name</th>
                                    <th>Email</th>
                                    <th>Contact</th>
                                    <th>Mobile</th>
                                    <th>Address</th>
                                    <th>Country</th>
                                    <th>City</th>
                                    <th hidden>NameAR</th>
                                    <th>ID </th>
                                    <th>License</th>
                                    <th>FAX</th>
                                    <th>Is Email Sent</th>
                                    <th>TRN</th>
                                    <th>Active</th>

                                </tr>
                            </thead>
                            <tbody style="display:none">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-dark-75 font-weight-bolder text-hover-primary mb-1 font-size-lg">
                                           
                                        @(item.CreatedOn.HasValue ? item.CreatedOn.Value.ToString("dd MMM yyyy, h:mm tt") : "-")	
                                                </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="symbol symbol-50 flex-shrink-0 mr-4">
                                                    <div class="symbol-label" style="background-image: url(@item.Logo)"></div>
                                                </div>
                                                <div><a class="text-dark-75 font-weight-bolder text-hover-primary mb-1 font-size-lg" href="">@item.Name</a>
                                                <span class="text-muted font-weight-bold d-block">@item.VendorCode</span>
                                                </div>

                                            </div>
                                        </td>
                                        <td class="text-dark-75 font-weight-bolder text-hover-primary mb-1 font-size-lg">@item.Email</td>
                                        <td class="text-dark-75 font-weight-bolder text-hover-primary mb-1 font-size-lg">@item.Contact</td>
                                        <td class="text-dark-75 font-weight-bolder text-hover-primary mb-1 font-size-lg">@item.Mobile</td>
                                        <td class="text-dark-75 font-weight-bolder text-hover-primary mb-1 font-size-lg">@item.Address</td>
                                        <td class="text-dark-75 font-weight-bolder text-hover-primary mb-1 font-size-lg">@item.Country.Name</td>
                                        <td class="text-dark-75 font-weight-bolder text-hover-primary mb-1 font-size-lg">@item.City.Name</td>
                                        <td hidden class="text-dark-75 font-weight-bolder text-hover-primary mb-1 font-size-lg">@item.NameAr</td>
                                        <td class="text-dark-75 font-weight-bolder text-hover-primary mb-1 font-size-lg">@item.IDNo</td>
                                        <td class="text-dark-75 font-weight-bolder text-hover-primary mb-1 font-size-lg">@item.License</td>
                                        <td class="text-dark-75 font-weight-bolder text-hover-primary mb-1 font-size-lg">@item.FAX</td>
                                        <td class="text-dark-75 font-weight-bolder text-hover-primary mb-1 font-size-lg">@item.IsEmailSent</td>
                                        <td class="text-dark-75 font-weight-bolder text-hover-primary mb-1 font-size-lg">@item.TRN</td>
                                        <td class="text-dark-75 font-weight-bolder text-hover-primary mb-1 font-size-lg">@item.IsActive</td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!--end::Dashboard-->
                    </div>
                    <!--end::Container-->
                </div>
            </div>
        </div>
    </div>
    <!--end::Entry-->
</div>


@section IndexScript {

    <!--begin::Page Vendors(used by this page)-->
    <script src="~/assets/Admin/plugins/custom/datatables/datatables.bundle.js"></script>
    <!--end::Page Vendors-->
    <!--begin::Page Scripts(used by this page)-->
<script src="@Url.ContentVersioned("~/Assets/Admin/js/admin/vendor/VendorReport.js")"></script>
    
    <!--end::Page Scripts-->
    <script src="~/Assets/Admin/js/general/ModalPopup.js"></script>
    <!--end::Page Scripts-->

}


