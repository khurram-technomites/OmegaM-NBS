@model IEnumerable<NowBuySell.Data.VendorTransactionHistory>
@{
    ViewBag.Title = "Create Document";
    Layout = null;
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<div class="modal-header">
    <div class="container-fluid">
        <div class="row" style="justify-content: center;">
            <div class="col-md-16 col-xs-16 text-center">
                <h4><i class="flaticon2-document" area-hidden="true"></i> Transaction History</h4>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>
<div class="modal-body">
    <table class="table table-separate table-head-custom table-checkable" id="kt_datatable1">
        <thead>
            <tr>
                <th>Date</th>
                <th>Package Name</th>
                <th>Package Price</th>
                <th>Paid Amount</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(item.CreatedOn.ToString("dd MMM yyyy, h:mm tt"))</td>
                    <td>@item.VendorPackage.Name</td>
                    <td>@item.VendorPackage.Price</td>
                    <td>@item.Price</td>
                    <td>@item.Status</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="modal-footer text-muted">
        <div class="row">
            <div class="col-md-16  col-xs-16">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    Close
                </button>

            </div>
        </div>
    </div>
</div>
