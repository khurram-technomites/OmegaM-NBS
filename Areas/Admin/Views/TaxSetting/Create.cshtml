@model NowBuySell.Data.TaxSetting
@{
	ViewBag.Title = "Create";
	Layout = null;
}
<div class="modal-header">
	<h5 class="modal-title">Create</h5>
	<button type="button" class="close" data-dismiss="modal" aria-label="Close">
		<i aria-hidden="true" class="ki ki-close"></i>
	</button>
</div>
<div class="modal-body">
	@using (Html.BeginForm("Create", "TaxSetting", new { area = "Admin" }, FormMethod.Post, new { id = "Userform", @class = "form" }))
	{
		@Html.AntiForgeryToken()
		<div class="alert alert-danger text-center" id="divMessage" style="display:none"></div>
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="row">
    <div class="col-md-6 col-sm-12">
        <div class="form-group">
            <label class="control-label">Tax Name</label>
            <div class="input-group mb-2">
                @Html.EditorFor(model => model.TaxName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter tax name here ...", dir = "ltr", required = "required" } })
                @Html.ValidationMessageFor(model => model.TaxName, "", new { @class = "text-danger" })
                <div class="input-group-append"><span class="input-group-text"><i class="fa fa-tag"></i></span></div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-sm-12">
        <div class="form-group">
            <label class="control-label">Tax Name (Ar)</label>
            <div class="input-group mb-2">
                @Html.EditorFor(model => model.TaxNameAr, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter tax name here ...", dir = "rtl", required = "required" } })
                @Html.ValidationMessageFor(model => model.TaxNameAr, "", new { @class = "text-danger" })
                <div class="input-group-append"><span class="input-group-text"><i class="fa fa-tag"></i></span></div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-sm-12">
        <div class="form-group">
            <label class="control-label">Tax Description</label>
            <div class="input-group mb-2">
                @Html.EditorFor(model => model.TaxDescription, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter tax description  here ...", dir = "ltr", required = "required" } })
                @Html.ValidationMessageFor(model => model.TaxDescription, "", new { @class = "text-danger" })
                <div class="input-group-append"><span class="input-group-text"><i class="fa fa-tag"></i></span></div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-sm-12">
        <div class="form-group">
            <label class="control-label">Tax Percentage</label>
            <div class="input-group mb-2">
                @Html.EditorFor(model => model.TaxPercentage, new { htmlAttributes = new { @class = "form-control", type = "number", step = ".01", placeholder = "Enter tax percentage here ...", required = "required" } })
                @Html.ValidationMessageFor(model => model.TaxPercentage, "", new { @class = "text-danger" })
                <div class="input-group-append"><span class="input-group-text"><i class="fa fa-percent"></i></span></div>
            </div>
        </div>
    </div>
</div>
	}
</div>
<div class="modal-footer">
	<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
	<button type="submit" class="btn btn-info" form="Userform">Submit</button>
</div>