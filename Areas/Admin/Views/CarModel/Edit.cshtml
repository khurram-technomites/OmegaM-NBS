@model NowBuySell.Data.CarModel
@{
    ViewBag.Title = "Edit";
    Layout = null;
}

<div class="modal-header">
    <h5 class="modal-title">Update</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <i aria-hidden="true" class="ki ki-close"></i>
    </button>
</div>
<div class="modal-body">

    @using (Html.BeginForm("Edit", "CarModel", new { area = "Admin" }, FormMethod.Post, new { id = "frm-edit", @class = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="alert alert-danger text-center" id="divMessage" style="display:none"></div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.CarMake_ID, "Motor Make", htmlAttributes: new { @class = "control-label" })
                    <div class="input-group mb-3">
                        @Html.DropDownList("CarMake_ID", null, "Select motor make", htmlAttributes: new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.CarMake_ID, "", new { @class = "text-danger" })
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fa fa-tools"></i></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, "Model", htmlAttributes: new { @class = "control-label" })
                    <div class="input-group mb-2">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter car model here ...", required = "required" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        <div class="input-group-append"><span class="input-group-text"><i class="fa fa-tools"></i></span></div>
                    </div>
                </div>
            </div>
            <div class="col-md-12 col-sm-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.NameAR, "Model (Ar)", htmlAttributes: new { @class = "control-label" })
                        <div class="input-group mb-2">
                            @Html.EditorFor(model => model.NameAR, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter car model (ar) here ...", required = "required", dir = "rtl" } })
                            @Html.ValidationMessageFor(model => model.NameAR, "", new { @class = "text-danger" })
                            <div class="input-group-append"><span class="input-group-text"><i class="fa fa-tools"></i></span></div>
                        </div>
                    </div>
                </div>
            <input type="text" class="" value="-" name="NameAR" hidden="" />

        </div>
    }
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <button type="submit" class="btn btn-info" form="frm-edit">Save Changes</button>
</div>

