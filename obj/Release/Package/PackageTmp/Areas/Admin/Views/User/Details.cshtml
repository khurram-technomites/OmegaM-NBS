@model NowBuySell.Data.User
@{
    ViewBag.Title = "Details";
    Layout = null;
}

<div class="modal-header">
    <h5 class="modal-title">Details</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <i aria-hidden="true" class="ki ki-close"></i>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-12 col-xs-12">
            <div class="float-right mb-3">
                <i class="fa fa-calendar"></i>
                <b>@Html.Label("Creation Date:", htmlAttributes: new { @class = "control-label" })</b>
                @if (Model.CreatedOn.HasValue)
                {
                    var date = Model.CreatedOn.Value.ToString("dd MMM yyyy, h:mm tt");
                    <label class="control-label" readonly="readonly">@date</label>
                }
                else
                {
                    <label class="control-label" readonly="readonly"> - </label>
                }
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-xs-12">
            <div class="input-group mb-3">
                <label class="control-label">Name</label>
                <div class="input-group mb-3">
                    <label class="form-control" readonly="readonly">@Model.Name</label>
                    <div class="input-group-append">
                        <span class="input-group-text"><i class="fa fa-user"></i></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <div class="form-group">
                <label class="control-label">Email</label>
                <div class="input-group mb-3">
                    <label class="form-control" readonly="readonly">@Model.EmailAddress</label>
                    <div class="input-group-append">
                        <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-sm-12">
            <div class="form-group">
                <label class="control-label">Mobile No</label>
                <div class="input-group mb-3">
                    <label class="form-control" readonly="readonly">@Model.MobileNo</label>
                    <div class="input-group-append">
                        <span class="input-group-text"><i class="fa fa-phone"></i></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="form-group">
                <label class="control-label">Role</label>
                <div class="input-group mb-3">
                    <label class="form-control" readonly="readonly">@(Model.UserRole != null ? Model.UserRole.RoleName : "-")</label>
                    <div class="input-group-append">
                        <span class="input-group-text"><i class="fa fa-user-secret"></i></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>

<script>
    jQuery(document).ready(function () {
        $('.modal-body').find('.form-control').prop('disabled', true);
        $('.modal-body').find('input').prop('disabled', true);
        $('.modal-body').find('select').prop('disabled', true);
        $('.modal-body').find('textarea').prop('disabled', true);
    });
</script>