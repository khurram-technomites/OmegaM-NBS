
@model IEnumerable<NowBuySell.Data.ScheduleMeeting>

@{
    ViewBag.Title = "Meeting List";
    Layout = null;
}
<style>
    #kt_datatable1 tbody tr td:last-child {
        white-space: nowrap;
    }
</style>
<!--begin::Row-->
<div class="row">
    <div class="col-xl-12">
        <!--begin::Card-->
        <div class="card card-custom gutter-b">
            <div class="card-header flex-wrap border-0 pt-6 pb-0">
                <div class="card-title">
                    <h6 >
                        Motor Meeting Requests
                     
                    </h6>
                </div>
            </div>
            <div class="card-body">
                @Html.AntiForgeryToken()
                <!--begin: Datatable-->
                <table class="table table-separate table-head-custom table-checkable" id="kt_datatable2">
                    <thead>
                        <tr>
                            <th hidden></th>
                            <th>Meeting Date</th>
                            <th>Customer</th>
                            <th>Motor</th>
                            <th>Status</th>
                            @*<th>Message</th>*@
                        </tr>
                    </thead>
                    <tbody >
                        @foreach (var item in Model)
                        {
                            <tr>
                                @* <td hidden>@item.ID</td>*@
                                <td hidden>@item.ID</td>
                                <td data-order="@item.ID">@(item.MeetingDate.Value.ToString("dd MMM yyyy, h:mm tt"))</td>
                                <td><div class="d-flex align-items-center">
                                    <div class="symbol symbol-50 flex-shrink-0 mr-4">
                                        <div class="symbol-label" style="border-radius: 50%; background-image: url( @item.Customer.Logo)"></div>
                                    </div>
                                    <div>
                                        <a href="#" class="text-dark-75 font-weight-bolder text-hover-primary mb-1 font-size-lg"> @item.Customer.Name</a><br>
                                          <a href="#" class="text-dark-75 font-weight-bolder text-hover-primary mb-1 font-size-lg"> @item.Customer.Email</a>
                                     </div>
    
                                    </div>
                                </td>

                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="symbol symbol-50 flex-shrink-0 mr-4">
         
                                     <div class="symbol-label" style="border-radius: 50%;background-image: url(@item.Car.Thumbnail)"></div>
        
                                        </div>
                                        <div>
                                             
                                            <a href="/Vendor/Car/Details/@item.Car.ID" target="_blank" class="text-dark-75 font-weight-bolder text-hover-primary mb-1 font-size-lg">@item.Car.Name</a><br>
                                            
                                        </div>
    
                                    </div>
                                </td>
                                <td><span  class="label label-lg font-weight-bold label-inline ">@item.Status</span></td>
                                @*<td>@item.ID</td>*@
                            </tr>
                        }
                    </tbody>
                </table>
                <!--end: Datatable-->
            </div>
        </div>
        <!--end::Card-->
    </div>
</div>


<!--end::Row-->
