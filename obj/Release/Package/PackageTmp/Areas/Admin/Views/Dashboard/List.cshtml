                            <button type="submit" id="btnSubmit2" class="btn btn-dark btn-sm" @(Model.TopCars.Count() > 0 ? "" : "disabled")>
                                <i class="far fa-file-excel"></i>
                                Report
                            </button>
                        }
                    </div>
                    <!--end::Export-->
                    <a href="/Admin/Car/Index" class="btn btn-info font-weight-bolder font-size-sm">
                        <span class="menu-icon">
                            <i class="fa fa-eye" style="color: white;"></i>
                        </span>View All Motors
                    </a>
                </div>
            </div>
            <!--end::Header-->
            <!--begin::Body-->
            <div class="card-body">
                <table class="table table-head-custom table-vertical-center" id="kt_advance_table_widget_cars">
                    <thead>
                        <tr class="text-left">
                            <th>Motor</th>
                            <th>Items Sold</th>
                            <th>Net Sales</th>
                        </tr>
                    </thead>
                    <tbody style="display:none">
                        @foreach (var cars in Model.TopCars)
                        {
                            <tr>
                                <td>
