                                        @using (Html.BeginForm("Report", "Gallery", FormMethod.Post))
                                        {
                                            @Html.AntiForgeryToken()

                                            <button type="submit" class="btn btn-dark btn-sm excel-btn">
                                                <i class="far fa-file-excel"></i>
                                                Export Excel
                                            </button>
