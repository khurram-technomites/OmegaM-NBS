                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div>
                                @using (Html.BeginForm("Create", "Gallery", FormMethod.Post, new { enctype = "multipart/form-data", id = "UploadGallery" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-group">
                                        <div class="input-group">
                                            <input type="file" multiple class="form-control" name="fileUpload" id="fileUpload" placeholder="Browse" required />
                                            <div class="input-group-append">
                                                <span class="input-group-text">
                                                    <i class="flaticon-upload"></i>
                                                </span>
                                            </div>
                                        </div>
                                        <span class="form-text text-muted">Image size must be less than 1 Mb</span>
                                    </div>
                                }
                                <hr />
                                <div class="row" id="GalleryContainer">
                                    @foreach (var promotionBanner in Model)
                                    {


                                        <div class="col-md-4 col-sm-12 mb-5 gallery-image ui-state-default" data="@promotionBanner.Name">
                                            <a class="btn btn-icon btn-light-dark btn-pill btn-lang" href="javascript:;" onclick="copyToClipboard(this,`@promotionBanner.Path`)" data-toggle="tooltip" data-placement="top" title="Copy to Clipboard">
                                                <i class="fa fa-copy"></i>
                                            </a>
                                            <a class="btn btn-icon btn-light-danger btn-pill " onclick="Delete(this,`@promotionBanner.Path`)" style="position:absolute; right:15px;top:2px">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                            <div class="bgi-no-repeat bgi-size-cover rounded min-h-200px shadow-sm" style="background-position: 50% 50%;background-image: url(@promotionBanner.Path)"></div>
                                        </div>

                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--end::Dashboard-->
        </div>
        <!--end::Container-->
    </div>
</div>
<div id="myModal" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content" style="min-height:100px">
            <div id='myModalContent'>
                <div class="row justify-content-center">
                    <div class="col-16">
                        <div class="kt-spinner kt-spinner--lg kt-spinner--dark kt-spinner-modal"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

