
@model NowBuySell.Data.Car
@{
    ViewBag.Title = "Approval Cancel";
    Layout = null;
}

<div class="modal-header">
    <h5 class="modal-title">Remarks</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <i aria-hidden="true" class="ki ki-close"></i>
    </button>
</div>
<div class="modal-body">

    @using (Html.BeginForm("Remarks", "Car", new { area = "Vendor" }, FormMethod.Post, new { id = "frm-edit", @class = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="alert alert-danger text-center" id="divMessage" style="display:none"></div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.IsApproved)
       
        <p>@Html.Raw(Model.Remarks)</p>
       
        <div class="row">

        </div>
    }
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

</div>
