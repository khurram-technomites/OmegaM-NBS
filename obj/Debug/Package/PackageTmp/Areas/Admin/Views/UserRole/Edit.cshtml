@model NowBuySell.Data.UserRole
@{
	ViewBag.Title = "Edit";
	Layout = null;
}

<div class="modal-header">
	<h5 class="modal-title">Update</h5>
	<button type="button" class="close" data-dismiss="modal" aria-label="Close">
		<i aria-hidden="true" class="ki ki-close"></i>
	</button>
</div>
<div class="modal-body">

	@using (Html.BeginForm("Edit", "UserRole", new { area = "Admin" }, FormMethod.Post, new { id = "frm-edit", @class = "form" }))
	{
		@Html.AntiForgeryToken()
		<div class="alert alert-danger text-center" id="divMessage" style="display:none"></div>
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@Html.HiddenFor(model => model.ID)
		
		<div class="row">
			<div class="col-md-12 col-sm-12"><div class="form-group"><label class="control-label">Role Name</label><div class="input-group mb-2">@Html.EditorFor(model => model.RoleName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter role name here ...", required = "required" }})@Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })<div class="input-group-append"><span class="input-group-text"><i class="fa fa-tag"></i></span></div></div></div></div>
		</div>
	}
</div>
<div class="modal-footer">
	<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
	<button type="submit" class="btn btn-info" form="frm-edit">Save Changes</button>
</div>
