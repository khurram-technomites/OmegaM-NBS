@model IEnumerable<NowBuySell.Data.Subscriber>


@{
    ViewBag.Title = "List";
    Layout = null;
}


<style>
    #kt_datatable1 tbody tr td:last-child {
        white-space: nowrap;
    }
</style>
<!--begin::Row-->
<div class="row">
    <div class="col-xl-12">
        <!--begin::Card-->
        <div class="card card-custom gutter-b">
            <div class="card-header flex-wrap border-0 pt-6 pb-0">
                <div class="card-title">
                    <h3 class="card-label">
                        Subscribers
                        <span class="d-block text-muted pt-2 font-size-sm">Manage Subscribers Here...</span>
                    </h3>
                </div>
                <div class="card-toolbar">
                    <!--begin::Dropdown-->
                    @*<div class="dropdown dropdown-inline mr-2">
                            <a href="~/Assets/AppFiles/Documents/CSVSample/BulkCountry.xlsx" download type="button" class="btn btn-dark btn-sm">
                                <i class="fa fa-download"></i>
                                Sample CSV
                            </a>
                        </div>*@

                        <div class="dropdown dropdown-inline mr-2">
                            <button type="button" class="btn btn-info " onclick="OpenModelPopup(this, '/Admin/Subscribers/SendEmailToSubscribers')" data="/Admin/Subscribers/SendEmailToSubscribers">
                                <i class="fa fa-plus"></i>
                               Send Email
                            </button>
                        </div>
                    <!--end::Dropdown-->
                    <!--begin::Button-->
                    
                    <!--end::Button-->
                </div>
            </div>
            
            <div class="card-body">
                @Html.AntiForgeryToken()
                <!--begin: Datatable-->
                <table class="table table-separate table-head-custom table-checkable" id="kt_datatable1">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Email</th>
                            <th>Action</th>
                           
                        </tr>
                    </thead>
                    <tbody style="display:none">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td data-order="@item.ID">@(item.CreatedOn.HasValue ? item.CreatedOn.Value.ToString("dd MMM yyyy, h:mm tt") : "-")	</td>
                                <td>@item.EmailID</td>
                                <td>@item.ID</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!--end: Datatable-->
            </div>
        </div>
        <!--end::Card-->
    </div>
</div>
<!--end::Row-->




