@model IEnumerable<NowBuySell.Data.Property>

@{
    ViewBag.Title = "List";
    Layout = null;
}
<style>
    #kt_datatable1 tbody tr td:last-child {
        white-space: nowrap;
    }
</style>
<!--begin::Row-->
<div class="row">
    <div class="col-xl-12">
        <!--begin::Card-->
        <div class="card card-custom gutter-b">
            <div class="card-header flex-wrap border-0 pt-6 pb-0">
                <div class="card-title">
                    <h3 class="card-label">
                        Properties  
                        <span class="d-block text-muted pt-2 font-size-sm">Manage Properties Here...</span>
                    </h3>
                </div>

                <div class="card-toolbar">
                    <div class="dropdown dropdown-inline mr-2">
                        @using (Html.BeginForm("PropertiesReport", "Property", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <button type="submit" class="btn btn-dark btn-sm excel-btn">
                                <i class="far fa-file-excel"></i>
                                Export Excel
                            </button>
                        }
                    </div>
 
                </div>
            </div>
            <div class="card-body">
                @Html.AntiForgeryToken()
                <!--begin: Datatable-->
                <table class="table table-separate table-head-custom table-checkable" id="kt_datatable1">
                    <thead>
                        <tr>
                            <th hidden>ID</th>
                            <th>Date</th>
                            <th>Title</th>
                            <th>Active/InActive</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>   
                                <td>@(item.CreatedOn.ToString("dd MMM yyyy, h:mm tt"))</td>
                                <td>@item.Thumbnail,@item.Title,@item.Address</td>
                                <td>@item.IsActive</td>
                                <td></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!--end: Datatable-->
            </div>
        </div>
        <!--end::Card-->
    </div>
</div>
<!--end::Row-->
