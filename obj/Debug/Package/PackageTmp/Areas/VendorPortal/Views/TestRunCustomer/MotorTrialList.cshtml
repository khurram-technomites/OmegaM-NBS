

@model IEnumerable<NowBuySell.Data.TestRunCustomer>

@{
    ViewBag.Title = "Booking List";
    Layout = null;
}
<style>
    #kt_datatable1 tbody tr td:last-child {
        white-space: nowrap;
    }
</style>

<!--begin::Row-->
<div class="row">
    <div class="col-xl-12">
        <!--begin::Card-->
        <div class="card card-custom gutter-b">
            <div class="card-header flex-wrap border-0 pt-6 pb-0">
                <div class="card-title">
                    <h3 class="card-label">
                        Motor Test Drive Requests
                        <span class="d-block text-muted pt-2 font-size-sm">Manage Motor Test Drive Requests Here...</span>
                    </h3>
                </div>
                <!--<div class="card-toolbar">-->
                <!--begin::Dropdown-->
                <!--<div class="dropdown dropdown-inline mr-2">
                        @using (Html.BeginForm("CitiesReport", "City", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()


                        }
                    </div>

                </div>-->
            </div>
            <div class="card-body">
                @Html.AntiForgeryToken()
                <!--begin: Datatable-->
                <table class="table table-separate table-head-custom table-checkable" id="kt_datatable1">
                    <thead>
                        <tr>
                            <th>Date</th>
                            @*<th>Booking No</th>*@
                            <th>Customer </th>
                            <th>Motor </th>
                            <th>Booking Date </th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody style="display:none">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(item.CreatedOn.HasValue ? item.CreatedOn.Value.ToString("dd MMM yyyy, h:mm tt") : "-")</td>
                                @*<td>@item.TrialBookingNo</td>*@
                            <td>@item.Customer.Logo,@item.CustomerName,@item.CustomerEmail,@item.CustomerContact</td>
                                <td>@(item.Car !=null? item.Car.Name:"-"),@item.MotorID</td>
                                <td>@(item.BookedDate.HasValue ? item.BookedDate.Value.ToString("dd MMM yyyy") : "-"), @item.BookedTime</td>
                                <td>@item.Status</td>
                                <td nowrap="nowrap">@item.ID</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!--end: Datatable-->
            </div>
        </div>
        <!--end::Card-->
    </div>
</div>
<!--end::Row-->
