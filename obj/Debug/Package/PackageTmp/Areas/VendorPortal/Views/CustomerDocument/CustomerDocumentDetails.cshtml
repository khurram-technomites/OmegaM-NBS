        </div>
        <div class="col-md-4 col-sm-12">
            <div class=" mt-6 d-flex flex-column flex-root">
                <span class="font-weight-bolder mb-2">Area</span>
                <span class="opacity-70">
                    <i class="fa fa-map-marker"></i>
                    @(Model.Area != null ? (!string.IsNullOrEmpty(Model.Area.Name) ? Model.Area.Name : "") : "")
                </span>
            </div>
        </div>
        <div class="col-md-4 col-sm-12">
            <div class=" mt-6 d-flex flex-column flex-root">
                @*<span class="font-weight-bolder mb-2">Address</span>
                    <span class="opacity-70">
                        <i class="fa fa-address-card"></i>
                        @Model.Address
                    </span>*@
