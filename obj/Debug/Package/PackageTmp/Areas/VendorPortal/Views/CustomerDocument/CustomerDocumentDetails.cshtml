    <div>
        <hr style="width: 65%" />
        <h5 style="text-align:center" class="mt-9 mb-9">Document</h5>
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table" style="text-align:center">
                    <thead>
                        <tr>
                            <th class="font-weight-bold text-muted text-uppercase">Type</th>
                            <th class="pr-0 font-weight-bold text-muted text-uppercase">Region </th>
                            <th class="pr-0 font-weight-bold text-muted text-uppercase">Document</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CustomerDocuments)
                        {
						<tr class="font-weight-boldest">
							<td>
								<div class="align-items-center">
									<div>
										<a href="javascript:;" class="text-dark-75 font-weight-bolder text-hover-primary mb-1 font-size-lg">
											@item.Type
										</a>

									</div>
								</div>
							</td>
							@if (item.IsGCC.HasValue)
							{
								if ((bool)item.IsGCC)
								{
									<td>
										<div class="align-items-center">

											<div>
												<a href="javascript:;" class="text-dark-75 font-weight-bolder text-hover-primary mb-1 font-size-lg">
													GCC
												</a>
											</div>
										</div>
									</td>
								}
								else
								{
									<td>
										<div class=" align-items-center">

											<div>
												<a href="javascript:;" class="text-dark-75 font-weight-bolder text-hover-primary mb-1 font-size-lg">
													Non GCC
												</a>
											</div>
										</div>
									</td>
								}
							}
							else
							{
								<td>
									<div class=" align-items-center">

										<div>
											<a href="javascript:;" class="text-dark-75 font-weight-bolder text-hover-primary mb-1 font-size-lg">
												Global
											</a>
										</div>
									</div>
								</td>

							}
							<td>
								<div class="align-items-center">

									<a href="@item.Path" target="_blank" class="">
										<button class="btn btn-secondary btn-sm"><i class="fa fa-eye"></i>View</button>
									</a>

								</div>
							</td>



						</tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="modal-footer">
