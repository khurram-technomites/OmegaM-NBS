            </div>
        </div>

        <div class="col-md-4 col-sm-12">
            <div class="mt-6 d-flex flex-column flex-root">
                <span class="font-weight-bolder mb-2">Contact No</span>
                <span class="opacity-70">
                    <i class="fa fa-phone-alt"></i>

                    @Model.Contact

                </span>
            </div>
        </div>

        <div class="col-md-4 col-sm-12">
            <div class=" mt-6 d-flex flex-column flex-root">
                <span class="font-weight-bolder mb-2">Account Type</span>
                <span class="opacity-70">
                    <i class="fa fa-paperclip"></i>
                    @Model.AccountType
                </span>
            </div>
        </div>

        <div class="col-md-4 col-sm-12">
            <div class="mt-6 d-flex flex-column flex-root">
                <span class="font-weight-bolder mb-2">Country</span>
                <span class="opacity-70">
                    <i class="fa fa-globe"></i>
                    @(Model.Country != null ? (!string.IsNullOrEmpty(Model.Country.Name) ? Model.Country.Name : "") : "")
                </span>
            </div>
        </div>
        <div class="col-md-4 col-sm-12">
            <div class=" mt-6 d-flex flex-column flex-root">
