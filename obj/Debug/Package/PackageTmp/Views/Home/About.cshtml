</div>
<!-- PAGE CONTAINER END -->

@section IndexScript {
	<script>
		$(".read-more").click(function () {
			var elem = $(this);
			var div = elem.closest('div');
			var h3 = String.raw`${$(div).find('h3').html()}`;
			var p = String.raw`${$(div).find('p').html()}`;

			$('.readmore-heading').html(h3);
			$('.readmore-p').html(p);

			$('#readmore-text-popup').modal('show');
		});
	</script>
}