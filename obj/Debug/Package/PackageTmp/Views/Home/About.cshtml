	<!-- BANNER END -->
	<!-- MAIN START -->
	<main class="wo-main">
		<!-- Why We’re So Different START -->
		<section class="wo-main-section wo-about-main-section">
			<div class="container">
				<div class="row justify-content-md-center">
					<div class="col-lg-9 col-xl-8">
						<div class="wo-sectionhead">
							<div class="wo-sectionhead__title">
								<span>@Resources.AboutMainSubText</span>
								<h2>@Html.Raw(Resources.AboutMainHeading)</h2>
							</div>
							<div class="wo-sectionhead__description">
								<p>@Resources.AboutMainText</p>
							</div>
						</div>
					</div>
					<div class="wo-differentpost-wrap">
						<div class="col-12 col-md-6 col-lg-3">
							<div class="wo-differentpost">
								<img src="~/Assets/images/footer/img-03.png" class="tag-purple" alt="img description">
								<h3>@Resources.BestPrice</h3>
								<p class="txt-wrap-card-offers">@Html.Raw(Resources.BEST_PRICE_DETAILS)</p>
								<a href="javascript:void(0);" class="read-more">@Resources.ReadMore</a>
							</div>
						</div>
						<div class="col-12 col-md-6 col-lg-3">
							<div class="wo-differentpost">
								<img src="~/Assets/images/footer/img-02.png" class="tag-purple" alt="img description">
								<h3>@Resources.TopCategories</h3>
								<p class="txt-wrap-card-offers">@Html.Raw(Resources.TOP_CATEGORIES_DETAILS)</p>
								<a href="javascript:void(0);" class="read-more">@Resources.ReadMore</a>
							</div>
						</div>
						<div class="col-12 col-md-6 col-lg-3">
							<div class="wo-differentpost">
								<img src="~/Assets/images/footer/img-01.png" class="tag-purple" alt="img description">
								<h3>@Resources.SecureWayofPayment</h3>
								<p class="txt-wrap-card-offers">@Html.Raw(Resources.SECURE_WAY_OF_PAYMENTS_DETAILS)</p>
								<a href="javascript:void(0);" class="read-more">@Resources.ReadMore</a>
							</div>
						</div>
						<div class="col-12 col-md-6 col-lg-3">
							<div class="wo-differentpost">
								<img src="~/Assets/images/footer/img-04.png" class="tag-purple" alt="img description">
								<h3>@Resources.QualityofVehicles</h3>
								<p class="txt-wrap-card-offers">@Html.Raw(Resources.QUALITY_OF_VEHICLES_DETAILS)</p>
								<a href="javascript:void(0);" class="read-more">@Resources.ReadMore</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
		<!-- Why We’re So Different End -->
	</main>
