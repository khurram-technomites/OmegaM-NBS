							<h2 class="h2 ml-2 text-white-50">
								@Html.Raw(@Resources.About)
							</h2>
							<h2 class="text-white">@Html.Raw(Resources.AboutTextHeading)</h2>
						</div>
						<div class="wo-aboutbanner__description text-white">
							<p class="text-justify">
								@Html.Raw(@Resources.AboutText)
							</p>
						</div>
